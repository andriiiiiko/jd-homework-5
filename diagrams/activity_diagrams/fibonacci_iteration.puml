@startuml
'https://plantuml.com/activity-diagram-beta

start
:Check if n < 0?;
if (yes) then (true)
  :Throw IllegalArgumentException;
else (no)
  :Check if n <= 1?;
  if (yes) then (true)
    :Return n;
  else (no)
    :previous = 0;
    :current = 1;
    :i = 2;
    while (i <= n) is (true)
      :next = previous + current;
      :previous = current;
      :current = next;
      :i++;
    endwhile
    :Return current;
  endif
endif
stop
@enduml
